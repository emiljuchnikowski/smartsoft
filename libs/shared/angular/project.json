{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/shared/angular/src",
  "prefix": "smart",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "options": {
        "tsConfig": "libs/shared/angular/tsconfig.lib.json",
        "project": "libs/shared/angular/ng-package.json",
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "libs/shared/angular/jest.config.ts",
        "passWithNoTests": true
      },
      "outputs": [
        "{workspaceRoot}/coverage/libs/shared/angular"
      ]
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/shared/angular/.storybook",
        "browserTarget": "shared-angular:build-storybook",
        "compodoc": false,
        "stylePreprocessorOptions": {
          "includePaths": [
            "libs/shared/angular/src/lib",
            "apps/ui/test/src"
          ]
        },
        "styles": []
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "options": {
        "outputDir": "dist/storybook/shared-angular",
        "configDir": "libs/shared/angular/.storybook",
        "browserTarget": "shared-angular:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  },
  "generators": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "tags": [
    "scope:shared",
    "type:shell"
  ]
}
