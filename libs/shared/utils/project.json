{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/utils/src",
  "projectType": "library",
  "generators": {},
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:lint",
      "options": {
        "linter": "eslint",
        "tsConfig": [
          "libs/shared/utils/tsconfig.lib.json",
          "libs/shared/utils/tsconfig.spec.json"
        ],
        "exclude": [
          "**/node_modules/**",
          "!libs/shared/utils/**/*"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "libs/shared/utils/jest.config.ts",
        "passWithNoTests": true
      },
      "outputs": [
        "coverage/libs/shared/utils"
      ]
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "outputPath": "dist/libs/shared/utils",
        "tsConfig": "libs/shared/utils/tsconfig.lib.json",
        "packageJson": "libs/shared/utils/package.json",
        "main": "libs/shared/utils/src/index.ts",
        "assets": [
          "libs/shared/utils/*.md"
        ]
      },
      "outputs": [
        "{options.outputPath}"
      ]
    }
  },
  "tags": [
    "scope:shared",
    "type:shell"
  ]
}
